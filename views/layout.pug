doctype html
html
  head
    //- use ${h.siteName} instead of "Site Name"
    title= `${title} | Site Name` 
    link(rel='stylesheet', href='/dist/style.css')
    //- link(rel="shortcut icon" type="image/png" href="/images/icons/quaker.png")
    meta(name="viewport" content="width=device-width, initial-scale=1")
  body
    block header
      //- header/navbar
      header.top
        nav.nav
          .nav__section.nav__section--pages 
            li.nav__item
              a.nav__link.nav__link--logo(href="/")
                != h.icon('pug')
          each item in h.menu
            li.nav__item 
              a.nav__link.nav__link--logo(href=item.slug, class=currentPath.startsWith(item.slug) ? 'nav__link--active' : '')
                != h.icon(item.icon)
                span #{item.title}
    
    block messages 
      //- flash messages go here
    
    .content 
      block content 
        //- main content
        h2 default content
    
    footer 
      block footer 
        //- footer
        p default footer
        
    block scripts
      //- script(src=`https://maps.googleapis.com/maps/api/js?key=${process.env.MAP_KEY}&libraries=places`)
      script(src="/dist/App.bundle.js")
